    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body>

    {{{body}}}

    <div class="show-notify"></div>

    <div class="load-animate">
      <div class="d-flex justify-content-center align-items-center h-100">
        <div class="spinner-triple">
          <div class="spinner-triple">
            <div class="spinner-triple"></div>
          </div>
        </div>
      </div>
    </div>

    <div class="toggle-mode" title="Dark mode">
      <i class="fa-solid fa-toggle-off toggle-mode-off"></i>
      <i class="fa-solid fa-toggle-on toggle-mode-on"></i>
    </div>

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
